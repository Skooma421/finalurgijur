<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEAB3B3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            app:srcCompat="@drawable/sabcheli" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:layout_marginTop="-40dp"
            android:background="#FFEAB3B3"
            android:gravity="center"
            android:text="ჩვენს შესახებ"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="შეხვდით თქვენს ახალ სამზარეულოს კომპანიონს - ოკურიმონოს! ოკურიმონო გახლავთ რეცეპტების აპლიკაცია, სადაც ნებისმიერი ჩვენი მმომხმარებელი შეძლებს სახლის პირობებში მოამზადოს ნამდვილი კულინარიული შედევრი. გჭირდებათ შთაგონება სამზარეულოში? არასოდეს დაკარგოთ იდეები ჩვენი მრავალფეროვანი და საინტერესო ბიბლიოთეკის დათვალიერებით!"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>